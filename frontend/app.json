{
  "expo": {
    "name": "Grad Wizard",
    "slug": "gradwizard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/loggo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/loggo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0e1b0d"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.enesoy.gradwizard",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSCameraUsageDescription": "This app uses the camera to let you pick a profile photo.",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library to let you pick a profile photo."
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3940256099942544~1458002511"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/loggo.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.enesoy.gradwizard",
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3940256099942544~3347511713"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/loggo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "react-native-google-mobile-ads"
    ],
    "extra": {
      "expo-ads-admob": {
        "userTrackingPermission": "This identifier will be used to deliver personalized ads to you."
      },
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c7af8250-2584-41a8-bf2c-1df4d81266bf"
      }
    },
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/images/logo.png",
      "color": "#51B402",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "Grade Wizard"
    },
    "locales": {
      "tr": "./translations/tr.json",
      "en": "./translations/en.json"
    }
  }
}
