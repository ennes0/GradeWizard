{
  "expo": {
    "name": "Grad Wizard",
    "slug": "Grad Wizard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/logo0.png",
      "resizeMode": "contain",
      "backgroundColor": "#0e1b0d"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo0.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo.png", 
          "color": "#51B402",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/images/logo.png", 
      "color": "#51B402",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "Grade Wizard"
    },
    "locales": {
      "tr": "./translations/tr.json",
      "en": "./translations/en.json"
    }
  }
}
